{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/lib/*"]
    },
    "lib": [
      "dom", 
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "allowJs": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
